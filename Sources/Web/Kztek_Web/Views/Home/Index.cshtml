}

<div class="row">
    <div class="col-xs-9">
        <div id="boxProjectRender">

        </div>

        <div class="row">
            <div class="col-xs-6">
              <div id="boxTaskRender"></div>
            </div>
            <div class="col-xs-6">
              <div id="boxScheduleRender">

              </div>
            </div>
        </div>
    </div>
