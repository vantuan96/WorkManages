@model Kztek_Model.Models.MN.MN_CustomerGroup

@{
ViewBag.Title = "Thêm mới nhóm khách hàng";
}

<div class="page-header">
    <h1>
        @ViewBag.Title
    </h1>
</div>

<div class="row">
    @if (TempData["Success"] != null) {
    <strong style="color:green">@TempData["Success"]</strong>
    }
    <strong style="color:red">@ViewBag.Error</strong>
</div>

<div class="row">

    @using (Html.BeginForm("Create", "MN_CustomerGroup", FormMethod.Post, new { encType = "multipart/form-data", @class =
    "form-horizontal", @role = "form", @id="frmUser" }))
    {

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    @Html.Hidden("SaveAndCountinue", false)

    <div class="col-xs-10">
        <div class="form-group">
            <label class="col-sm-4 control-label no-padding-right">
                Tiêu đề <span style="color:red">*</span></label>
            <div class="col-sm-6 col-xs-12">
                @Html.TextBoxFor(n => n.Name, new { @class = "form-control",
                @placeholder = "Name" })
                @Html.ValidationMessageFor(n =>
                n.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-4 control-label no-padding-right"> Mô tả </label>
            <div class="col-sm-6 col-xs-12">
                @Html.TextAreaFor(n => n.Description, new { @class = "form-control",
                @placeholder = "Mô tả" }) @Html.ValidationMessageFor(n =>
                n.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-4 control-label no-padding-right"> STT </label>
            <div class="col-sm-6 col-xs-12">
                @Html.TextBoxFor(n => n.Ordering, new { @class = "form-control",
                @placeholder = "Ordering" }) @Html.ValidationMessageFor(n =>
                n.Ordering, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>

    <div class="col-xs-2">
        
    </div>

    @await Html.PartialAsync("~/Views/Shared/Partials/ButtonPartial.cshtml", new Kztek_Library.Models.AuthPartialModel() {
          ControllerName = "MN_CustomerGroup",
          ActionName = "Create",
          RecordId = "",
          model = null,
          Auth_Value = null
      })
    }
</div>

@section scripts{
<script>
    $(document).ready(function () {
       $("#Countinue").click(function () {
            $("#SaveAndCountinue").val("true");
        });
    });
</script>
}