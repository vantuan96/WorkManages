@{
	string actionMenu = this.ViewContext.RouteData.Values["action"].ToString();
    string controllerMenu = this.ViewContext.RouteData.Values["controller"].ToString();
}

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
		<meta charset="utf-8" />
		<title>@await Component.InvokeAsync("Website") </title>

		<meta name="description" content="" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />

		<!-- bootstrap & fontawesome -->
		<link rel="stylesheet" href="/css/bootstrap.min.css" />
		<link rel="stylesheet" href="/font-awesome/4.5.0/css/font-awesome.min.css" />

		<!-- page specific plugin styles -->

		<!-- text fonts -->
		<link rel="stylesheet" href="/css/fonts.googleapis.com.css" />

		<!-- ace styles -->
		<link rel="stylesheet" href="/css/ace.min.css" class="ace-main-stylesheet" id="main-ace-style" />

		<!--[if lte IE 9]>
			<link rel="stylesheet" href="~/css/ace-part2.min.css" class="ace-main-stylesheet" />
		<![endif]-->
		<link rel="stylesheet" href="/css/ace-skins.min.css" />
		<link rel="stylesheet" href="/css/ace-rtl.min.css" />

		<!--[if lte IE 9]>
		  <link rel="stylesheet" href="~/css/ace-ie.min.css" />
		<![endif]-->

		<!-- inline styles related to this page -->

		<!-- ace settings handler -->
		<script src="/js/ace-extra.min.js"></script>

		<!-- HTML5shiv and Respond.js for IE8 to support HTML5 elements and media queries -->

		<!--[if lte IE 8]>
		<script src="~/js/html5shiv.min.js"></script>
		<script src="~/js/respond.min.js"></script>
		<![endif]-->

		<link rel="stylesheet" href="/css/chosen.min.css" />

		<link rel="stylesheet" href="/css/ext/toastr.min.css" />

		<link rel="stylesheet" href="/css/site.css" />

        <link rel="stylesheet" href="/css/bootstrap-datetimepicker.min.css" />

        <link rel="stylesheet" href="/css/bootstrap-timepicker.min.css" />
	</head>

	<body class="no-skin">
		<div id="navbar" class="navbar navbar-default          ace-save-state navbar-fixed-top">
			@await Component.InvokeAsync("Header")
		</div>

		<div class="main-container ace-save-state" id="main-container">
			@await Component.InvokeAsync("Sidebar", new { controllername = controllerMenu, actionname = actionMenu })

			<div class="main-content">
				<div class="main-content-inner">
					<div class="breadcrumbs ace-save-state breadcrumbs-fixed" id="breadcrumbs">
                    	@await Component.InvokeAsync("Breadcrumb", new { controllername = controllerMenu, actionname = actionMenu })
                	</div>

					<div class="page-content">
						<div class="row">
							<div class="col-xs-12">
								<!-- PAGE CONTENT BEGINS -->

                                @RenderBody()

								<!-- PAGE CONTENT ENDS -->
							</div><!-- /.col -->
						</div><!-- /.row -->
					</div><!-- /.page-content -->
				</div>
			</div><!-- /.main-content -->

			<!-- <partial name="FooterPartial" /> -->
			@await Html.PartialAsync("~/Views/Shared/Partials/FooterPartial.cshtml")

			<a href="#" id="btn-scroll-up" class="btn-scroll-up btn btn-sm btn-inverse">
				<i class="ace-icon fa fa-angle-double-up icon-only bigger-110"></i>
			</a>
		</div><!-- /.main-container -->

		<!-- basic scripts -->

		<!--[if !IE]> -->
		<script src="~/js/jquery-2.1.4.min.js"></script>

		<!-- <![endif]-->

		<!--[if IE]>
<script src="~/js/jquery-1.11.3.min.js"></script>
<![endif]-->
		<script type="text/javascript">
			if('ontouchstart' in document.documentElement) document.write("<script src='/js/jquery.mobile.custom.min.js'>"+"<"+"/script>");
		</script>
		<script src="/js/bootstrap.min.js"></script>

		<!-- page specific plugin scripts -->

		<!-- ace scripts -->
		<script src="/js/ace-elements.min.js"></script>
		<script src="/js/ace.min.js"></script>

		<!-- New -->
		<script src="/js/moment.min.js"></script>
		<script src="/js/daterangepicker.min.js"></script>
		<script src="/js/chosen.jquery.min.js"></script>
		<script src="/js/jquery-ui.min.js"></script>
		<script src="/js/jquery-ui.custom.min.js"></script>
		<script src="/js/bootbox.js"></script>
		<script src="/js/bootstrap-datetimepicker.min.js"></script>
		<script src="/js/bootstrap-timepicker.min.js"></script>
		<script src="/js/bootstrap-multiselect.min.js"></script>

		<!-- Extensions -->
		<script src="/js/ext/toastr.min.js"></script>

		<script src="/js/ext/jquery.mask.js"></script>

		<!-- Customs -->
		<script src="/customs/JSCustom.min.js"></script>
		<!-- <script src="~/customs/JSCommon.js"></script>
		<script src="~/customs/JSHelper.js"></script> -->

		<!-- Render inline view -->
        @RenderSection("Scripts", required: false)

	</body>
</html>
